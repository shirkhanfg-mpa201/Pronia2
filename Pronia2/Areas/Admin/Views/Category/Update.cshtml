@model Category

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-controller="Category" asp-action="Update" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="formGroupExampleInput">Name</label>
                    <input class="form-control" id="formGroupExampleInput" asp-for="Name" placeholder="Enter slider Title">
                    <span asp-validation-for="Name" class="text-danger" style="font-size: 0.875rem; font-weight: bold; padding-top: 5px;"></span>
                </div>


                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>


