@model List<Product>

<div class="container my-3">
    <div class="row">

        <h2>Products</h2>
        <div class="mb-4 col-4"> <a class="btn btn-success btn-lg" asp-action="Create">Create New product</a></div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        
                        <th scope="col">MainImage</th>
                       
                        <th scope="col">Price</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <th scope="row">@product.Id</th>
                            <td>@product.Name</td>
                            <td>
                                <img src="~/assets/images/website-images/@product.MainImageUrl" alt="Alternate Text" />
                            </td>
                            
                            <td>@product.Price</td>
                            <td>
                                <a class="btn btn-warning">Update</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                            </td>
                            <td>@product.Category.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>