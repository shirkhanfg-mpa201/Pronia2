@model List<Service>

<div class="container my-3">
    <div class="row">
        <div class="mb-4 col-4"> <a class="btn btn-success btn-lg" asp-action="Create">Create New Service</a></div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <th scope="row">@service.Id</th>
                            <td>@service.Title</td>
                            <td>@service.Description</td>
                            <td>
                                <img src="~/assets/images/website-images/@service.ImageUrl" alt="Service Image" />
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm">Update</a>
                                <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
